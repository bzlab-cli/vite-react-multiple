{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types/", "./typings"],
    "noImplicitAny": false,
    "types": [
      "node",
      "webpack-env"
    ],
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "typings/**/*.d.ts",
    "typings/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
